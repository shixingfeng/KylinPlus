/**index.wxss**/
page{
  height: 100%;
  background-color:#f2f2f2;
  overflow: hidden;
}
html{
  background-color:#f2f2f2;
}
.input_tools{
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  min-height: 100rpx;
  box-shadow: 0rpx 0rpx 4rpx rgba(0,0,0,0.2);
  background-color: #f2f2f2;
}
.input_tool{
  position: relative;
  width: 100%;
  min-height: 80rpx;
  padding-bottom: 20rpx;
}
.tool_audio_btn{
  width: 80rpx;
  height: 80rpx;
  font-size: 20rpx;
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
}
.tool_word_content{
  background-color: #fff;
  position: relative;
  left: 100rpx;
  bottom: 10rpx;
  box-shadow: 0rpx 0rpx 0rpx 2rpx rgba(0,0,0,0.1);
  width: calc(100% - 300rpx - 20rpx);
  min-height: calc(80rpx - 8rpx);
  border-radius: 8rpx;
  padding: 6rpx 10rpx 2rpx 10rpx;
  font-size: 28rpx;
  color: #333;
  height: calc(80rpx - 8rpx);
  max-height: calc((80rpx - 8rpx) * 3);
  top:10rpx;
  line-height: 36rpx;
}
.tool_word_submit{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 180rpx;
  height: 80rpx;
}